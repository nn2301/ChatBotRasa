# Dockerfile.rasa
FROM rasa/rasa:3.6.2-full

USER root
WORKDIR /app

# Copy toàn bộ project (nếu bạn build model riêng thì chỉnh lại cho phù hợp)
COPY . /app

EXPOSE 8080
USER 1001

# Dùng shell form để đọc $PORT từ Render (fallback 8080)
CMD run --enable-api --cors "*" --host 0.0.0.0 -p ${PORT:-8080}
