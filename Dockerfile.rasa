# Dockerfile.rasa (phần đầu)
FROM rasa/rasa:3.6.2   # <-- bỏ "-full"

USER root
WORKDIR /app
COPY . /app

# (Tùy) CHỈ cài đúng lib bạn cần (đừng cài spacy / transformers / tensorflow)
# RUN pip install --no-cache-dir <thu-vien-ban-can> 

COPY server-entrypoint.sh /app/server-entrypoint.sh
RUN chmod +x /app/server-entrypoint.sh && chown -R 1001:0 /app

ENV RASA_TELEMETRY_ENABLED=false PYTHONUNBUFFERED=1
EXPOSE 8080
USER 1001
ENTRYPOINT ["/app/server-entrypoint.sh"]
